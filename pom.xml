<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
		http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>loci</groupId>
		<artifactId>pom-loci</artifactId>
		<version>1.15</version>
		<relativePath />
	</parent>

	<artifactId>curve-fitter</artifactId>
	<version>1.0.0-SNAPSHOT</version>

	<name>Curve Fitter library</name>
	<description>A library for fitting single- or multi-component exponential decay curves to sample data.</description>
	<inceptionYear>2010</inceptionYear>

	<licenses>
		<license>
			<name>BSD</name>
			<url>http://dev.loci.wisc.edu/svn/software/trunk/projects/curve-fitter/LICENSE.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<dependencies>
		<dependency>
			<groupId>${imagej.groupId}</groupId>
			<artifactId>ij</artifactId>
			<version>${imagej1.version}</version>
		</dependency>
		<!-- TODO: define a real POM for akutan project
			See: http://sourceforge.net/projects/akutan/ -->
		<dependency>
			<groupId>akutan</groupId>
			<artifactId>akutan</artifactId>
			<version>1.0</version>
		</dependency>
		<dependency>
			<groupId>colt</groupId>
			<artifactId>colt</artifactId>
			<version>1.2.0</version>
		</dependency>
		<dependency>
			<groupId>jaolho.data</groupId>
			<artifactId>lma</artifactId>
			<version>1.3</version>
		</dependency>
		<dependency>
			<groupId>net.java.dev.jna</groupId>
			<artifactId>jna</artifactId>
			<version>3.2.2</version>
		</dependency>
		<dependency>
			<groupId>org.scijava</groupId>
			<artifactId>native-lib-loader</artifactId>
			<version>2.0.0</version>
		</dependency>
		<dependency>
			<groupId>loci</groupId>
			<artifactId>slim-curve</artifactId>
			<version>${project.version}</version>
			<type>nar</type>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<manifest>
							<packageName>loci.curvefitter</packageName>
							<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
						</manifest>
					</archive>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>with-libs</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-nar-plugin</artifactId>
						<version>${nar.version}</version>
						<extensions>true</extensions>	<!-- what does this do? -->
						<configuration>
							<ignore>true</ignore>
							<classifiers>
								<!-- if one classifier fails, rest are ignored -->		
								<classifier>x86_64-MacOSX-gpp-shared</classifier>
								<classifier>x86-Windows-msvc-shared</classifier>	
								<classifier>amd64-Linux-gpp-shared</classifier>
							</classifiers>
							<libraries>
								<library>
									<type>shared</type>
								</library>
							</libraries>
						</configuration>
						<executions>
							<execution>
								<goals>
									<goal>nar-download</goal>
									<goal>nar-unpack</goal>
									<goal>nar-assembly</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<artifactId>maven-assembly-plugin</artifactId>
						<configuration>
							<descriptors>
								<descriptor>src/main/assembly/with-libs.xml</descriptor>
							</descriptors>
						</configuration>
						<executions>
							<execution>
								<id>make-assembly</id>
								<phase>package</phase>
								<goals>
									<goal>single</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

	<developers>
		<developer>
			<id>grislis</id>
			<name>Aivar Grislis</name>
			<email>grislis@wisc.edu</email>
			<url>http://loci.wisc.edu/people/aivar-grislis</url>
			<organization>UW-Madison LOCI</organization>
			<organizationUrl>http://loci.wisc.edu/</organizationUrl>
			<roles>
				<role>architect</role>
				<role>developer</role>
			</roles>
			<timezone>-6</timezone>
		</developer>
	</developers>

	<scm>
		<connection>scm:git:git://github.com/uw-loci/curve-fitter</connection>
		<developerConnection>scm:git:git@github.com:uw-loci/curve-fitter</developerConnection>
		<tag>HEAD</tag>
		<url>https://github.com/uw-loci/curve-fitter</url>
	</scm>

	<repositories>
		<!-- NB: for project parent -->
		<repository>
			<id>imagej.releases</id>
			<url>http://maven.imagej.net/content/repositories/releases</url>
		</repository>
	</repositories>

</project>
