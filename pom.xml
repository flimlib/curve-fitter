<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
    http://maven.apache.org/xsd/maven-v4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>loci</groupId>
    <artifactId>loci-base</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>

  <artifactId>curve-fitter</artifactId>

  <name>Curve Fitter library</name>
  <description>A library for fitting single- or multi-component exponential decay curves to sample data.</description>
  <inceptionYear>2010</inceptionYear>

  <licenses>
    <license>
      <name>BSD</name>
      <url>http://dev.loci.wisc.edu/svn/java/trunk/projects/curve-fitter/LICENSE.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <dependencies>
    <dependency>
      <groupId>${imagej.groupId}</groupId>
      <artifactId>ij</artifactId>
      <version>${imagej1.version}</version>
    </dependency>
    <dependency>
      <groupId>${imagej.groupId}</groupId>
      <artifactId>native-library-util</artifactId>
      <version>${imagej.version}</version>
    </dependency>
    <!-- TODO: define a real POM for akutan project
      See: http://sourceforge.net/projects/akutan/ -->
    <dependency>
      <groupId>akutan</groupId>
      <artifactId>akutan</artifactId>
      <version>1.0</version>
    </dependency>
    <dependency>
      <groupId>colt</groupId>
      <artifactId>colt</artifactId>
      <version>1.2.0</version>
    </dependency>
    <dependency>
      <groupId>jaolho.data</groupId>
      <artifactId>lma</artifactId>
      <version>1.3</version>
    </dependency>
    <dependency>
      <groupId>net.java.dev.jna</groupId>
      <artifactId>jna</artifactId>
      <version>3.2.2</version>
    </dependency>
    <dependency>
      <groupId>loci</groupId>
      <artifactId>slim-curve</artifactId>
      <version>1.0-SNAPSHOT</version>
      <type>nar</type>
      <!-- classifier>x86_64-MacOSX-gpp-jni</classifier -->
      <!-- dont understandt this part anyway scope>test</scope -->
    </dependency>
  </dependencies>

  <build>
    <plugins>
    
      <plugin>
        <artifactId>maven-nar-plugin</artifactId>
        <extensions>true</extensions> <!-- what does this do? -->
        <configuration>
          <ignore>true</ignore>
          <classifiers>
            <classifier>x86-Windows-msvc-shared</classifier>
            <classifier>x86_64-MacOSX-gpp-shared</classifier>
            <classifier>i386-Linux-g++-shared</classifier>
          </classifiers>
          <libraries>
            <library>
              <type>shared</type>
            </library>
          </libraries>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>nar-download</goal>
              <goal>nar-unpack</goal>
              <goal>nar-assembly</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <descriptors>
            <descriptor>
              assembly-descriptor.xml
            </descriptor>
          </descriptors>
        </configuration>
        <executions>
          <execution>
            <id>make-assembly</id> <!-- this is used for inheritance merges -->
            <phase>package</phase> <!-- bind to the packaging phase -->
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    

      <!-- THIS WAS THE ONLY PREVIOUS PLUGIN plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifest>
              <packageName>loci.curvefitter</packageName>
            </manifest>
          </archive>
        </configuration>
      </plugin -->
    </plugins>
  </build>

  <developers>
    <developer>
      <id>aivar</id>
      <name>Aivar Grislis</name>
      <email>grislis@wisc.edu</email>
      <url>http://loci.wisc.edu/people/aivar-grislis</url>
      <organization>UW-Madison LOCI</organization>
      <organizationUrl>http://loci.wisc.edu/</organizationUrl>
      <roles>
        <role>architect</role>
        <role>developer</role>
      </roles>
      <timezone>-6</timezone>
      <properties>
        <picUrl>http://loci.wisc.edu/files/loci/images/people/Aivar.jpg</picUrl>
      </properties>
    </developer>
  </developers>

  <!-- NB: for loci-base, in case of partial checkout -->
  <repositories>
    <repository>
      <id>loci.releases</id>
      <url>http://dev.loci.wisc.edu/maven2/releases</url>
    </repository>
    <repository>
      <id>loci.snapshots</id>
      <url>http://dev.loci.wisc.edu/maven2/snapshots</url>
    </repository>
  </repositories>

</project>
