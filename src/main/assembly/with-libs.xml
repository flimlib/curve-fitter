<assembly
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>with-libs</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${project.build.outputDirectory}</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/nar/lib/amd64-Linux-gpp/shared</directory>
      <outputDirectory>META-INF/lib/amd64-Linux-gpp</outputDirectory>
      <includes>
        <include>*.so</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/nar/lib/x86_64-MacOSX-gpp/shared</directory>
      <outputDirectory>META-INF/lib/x86_64-MacOSX-gpp</outputDirectory>
      <includes>
        <include>*.dylib</include>
      </includes>
    </fileSet>
    <!-- fileSet>
      <directory>${project.build.directory}/nar/lib/x86-Windows-msvc/shared</directory>
      <outputDirectory>lib/x86-Windows-msvc</outputDirectory>
      <includes>
        <include>*.dll</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/nar/lib/i386-Linux-g++/shared</directory>
      <outputDirectory>lib/i386-Linux-g++</outputDirectory>
      <includes>
        <include>*.so</include>
      </includes>
    </fileSet -->
  </fileSets>
</assembly>
